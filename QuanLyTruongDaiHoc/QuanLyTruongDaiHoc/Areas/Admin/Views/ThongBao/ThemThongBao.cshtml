@using QuanLyTruongDaiHoc.Models;
@model QuanLyTruongDaiHoc.Models.tb_ThongBao

<div class="modal fade" id="modalThemThongBao">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @using (Html.BeginForm("ThemThongBao", "ThongBao", FormMethod.Post))
            {
                <div class="modal-header">
                    <h4 class="modal-title">Thêm thông báo</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.DoiTuongNhanTB, "Đối tượng nhận", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                <select name="Doituong" class="form-control">
                                    <option value="@Init.ThongBaoAll" selected>@Init.StrThongBaoAll</option>
                                    <option value="@Init.ThongBaoGV">@Init.StrThongBaoGV</option>
                                    <option value="@Init.ThongBaoSV">@Init.StrThongBaoSV</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TieuDe, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                <input type="text" required id="tieude" name="Tieude" placeholder="Tiêu đề" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                <textarea id="noidung" required name="Noidung" placeholder="Nội dung" class="form-control"></textarea>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



