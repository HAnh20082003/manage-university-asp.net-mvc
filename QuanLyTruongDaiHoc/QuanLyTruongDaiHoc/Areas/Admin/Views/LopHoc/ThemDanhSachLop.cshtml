@model QuanLyTruongDaiHoc.Models.tb_LopHoc


<div class="modal fade" id="modalThemDanhSachLop">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @using (Html.BeginForm("ThemDanhSachLop", "LopHoc", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <h4 class="modal-title">Thêm danh sách lớp</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">


                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_Nganh, "Ngành", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.DropDownList("Nganh", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID_Nganh, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_HeDaoTao, "Hệ đào tạo", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-12">
                                @Html.DropDownList("HeDaoTao", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID_HeDaoTao, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Số lượng lớp:</label>
                            <div class="col-md-12">
                                <input type="number" name="SLLop" id="SLLop" min="1" max="100" required class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Số lượng sinh viên</label>
                            <div class="col-md-12">
                                <input type="number" name="SLSV" id="SLSV" min="1" max="100" required class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="checkbox" value="1" id="themSV" name="themSV" />
                            <label>Tự động thêm sinh viên vào lớp</label>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" value="1" id="themGVCV" name="themGVCV" />
                            <label>Tự động thêm cố vấn lớp học</label>
                        </div>
                    </div>



                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

