@model  IEnumerable<QuanLyTruongDaiHoc.Models.tb_SinhVien>


<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />




<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="@Url.Action("DanhSachSinhVien","LopHoc",new { id = int.Parse(ViewBag.idLop.ToString()) })" class="btn btn-lg btn-success me-md-2">In Danh Sách</a>
                    <button type="button" class="btn btn-lg btn-primary me-md-2" data-toggle="modal" data-target="#modalThemSinhVienLopHoc">
                        Thêm Sinh viên vào lớp
                    </button>



                </div>

            </div>
            <div class="card-body">
                <table id="danhsachSinhVien" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MaSinhVien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tb_ThongTinCaNhan.Hoten)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tb_ThongTinCaNhan.NgaySinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tb_ThongTinCaNhan.SDT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TrangThai)
                            </th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaSinhVien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tb_ThongTinCaNhan.Hoten)
                                </td>
                                <td>
                                    @item.tb_ThongTinCaNhan.NgaySinh.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tb_ThongTinCaNhan.SDT)
                                </td>
                                <td>
                                    @(item.TrangThai==true?"Đang học":"Nghỉ học")
                                </td>

                                <td class="col-1">
                                    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#modalXoaSinhVienLopHoc-@item.ID">
                                        Xóa
                                    </button>
                                    @Html.Action("XoaSinhVienLopHoc", "LopHoc", new { id = item.ID })

                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
        </div>


    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script>


    var table = new DataTable('#danhsachSinhVien', {
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json',
        },
    });

</script>



