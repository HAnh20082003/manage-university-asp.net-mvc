
<div class="modal fade" id="modalThemMoiNoiDungRL">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm nội dung rèn luyện</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ThemMoiNoiDungRL", "DiemRenLuyen", FormMethod.Post))
                {

                    @Html.DisplayName("Mã nội dung");
                    <div class="form-group">
                        <input class="form-control" type="text" id="manoidungrl" name="Mand" placeholder="Mã nội dung" />
                    </div>
                    @Html.DisplayName("Tên nội dung");
                    <div class="form-group">
                        <input class="form-control" type="text" id="tennoidungrl" name="Tennd" placeholder="Tên nội dung" />
                    </div>

                    <table class="table table-bordered table-hover" id="chitietrl">

                        @{
                            int i = 1;
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayName("Mã chi tiết")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Tên chi tiết")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Điểm tối đa")
                                    </th>

                                    <th>
                                        @Html.DisplayName("Tính năng")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>

                        }
                    </table>


                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                        <button type="button" id="themMoiChiTiet" class="btn btn-lg btn-primary me-md-2">
                            Thêm một dòng
                        </button>
                    </div>
                    <div class="card-footer">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-lg btn-primary me-md-2">
                                Xác nhận
                            </button>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("themMoiChiTiet").addEventListener("click", function () {
        // Lấy table và tbody
        var table = document.getElementById("chitietrl");
        var tbody = table.getElementsByTagName("tbody")[0];
        var currentIndex = table.rows.length;
        // Tạo một dòng mới
        var newRowHtml = ` <tr id = 'trnew${currentIndex}'>
                                                <td>
                                                    <div class="form-group">
                                                        <input class="form-control" type="text" id="machitietrl" name="Mact-${currentIndex}" placeholder="Mã chi tiết" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="form-group">
                                                        <input class="form-control" type="text" id="tenchitietrl" name="Tenct-${currentIndex}" placeholder="Tên chi tiết" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="form-group">
                                                        <input class="form-control" type="number" id="diemtoidarl" name="Diemtoida-${currentIndex}" min="0" value="0" oninput="checkNumber(this)" />
                                                    </div>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-lg" onclick = "XoachitietNew(${currentIndex})">
                                                            &times
                                                        </button>
                                                    </td>
                                                </tr>`

        tbody.innerHTML += newRowHtml;
    });

    function XoachitietNew(index) {
        var tr = document.getElementById(`trnew${index}`);
        var table = document.getElementById("chitietrl");
        var tbody = table.getElementsByTagName("tbody")[0];
        tbody.removeChild(tr);
    }
</script>
