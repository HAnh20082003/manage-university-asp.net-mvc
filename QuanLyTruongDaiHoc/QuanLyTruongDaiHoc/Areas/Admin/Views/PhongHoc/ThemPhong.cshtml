

<div class="modal fade" id="modalThemPhong">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @using (Html.BeginForm("ThemPhong", "PhongHoc", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-header">
                    <h4 class="modal-title">Thêm phòng mới</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                   
                    <div class="form-horizontal">
                        <div class="col-md-12">
                            <label>Mã Phòng Học:</label>
                            <div class="form-group">
                                <input type="text" name="MaPhongHoc" id="MaPhongHoc" class="form-control" />
                            </div>

                        </div>
                        <div class="col-md-12">
                            <label>Loại Phòng Học:</label>
                            <div class="form-group">
                                <select name="LoaiPhongHoc" class="form-control">
                                    <option value="Lý thuyết" selected>Lý thuyết</option>
                                    <option value="Thực hành">Thực hành</option>
                                </select>
                              
                            </div>

                        </div>
                        <div class="col-md-12">
                            <label>Vị trí:</label>
                            <div class="form-group">
                                <textarea class="form-control" name="ViTri" id="ViTri"></textarea>
                            </div>

                        </div>
                        <div class="col-md-12">
                            <label>Sức chứa</label>
                            <div class="form-group">
                                <input type="number" name="SucChua" id="SucChua" value="0"  min="0" max="999" class="form-control" />
                            </div>

                        </div>
                    
                        <div class="col-md-12" id="rdiTrangThai">
                            <label>Trạng thái:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="TrangThai1" name="TrangThai" value="true" checked>
                                <label class="form-check-label" for="TrangThai1">
                                    Hoạt động
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="TrangThai2" name="TrangThai" value="false">
                                <label class="form-check-label" for="TrangThai2">
                                    Bảo trì
                                </label>
                            </div>

                        </div>


                    </div>


                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>

                    <div class="row">

                        <button type="submit" class="btn btn-primary" >Thêm</button>
                    </div>

                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
