<div id="FormLichHoc">
    <input type="text" name="ID" value="@ViewBag.ID" hidden />
    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <label>Tiết bắt đầu:</label>
                <input type="number" name="batdau" id="batdau" value="@ViewBag.bd" onchange="changeValueBaseOnTiet()" required min="1" max="14" class="form-control">
            </div>
            <div class="col-md-6">
                <label>Tiết kết thúc:</label>
                <input type="number" name="ketthuc" id="ketthuc" value="@ViewBag.kt" onchange="changeValueBaseOnTiet()" required min="@ViewBag.bd" max="14" class="form-control">
            </div>
        </div>

    </div>

    <div class="form-group">
        <label>Phòng:</label>
        <div class="col-md-12">
            @Html.DropDownList("Phong", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

</div>

<script>



    function changeValueBaseOnTiet() {

        const Ngay = document.getElementById('date').value;
        const BatDau = document.getElementById('batdau').value;
        const KetThuc = document.getElementById('ketthuc').value;
        const url = new URL('@Url.Action("FormLichHoc", "KhoaHoc")', location.origin);
        url.searchParams.set('Ngay', Ngay);
        url.searchParams.set('tietbatdau', BatDau);
        url.searchParams.set('tietketthuc', KetThuc);
        console.log(url.href);
        $('#FormLichHoc').load(url.href);
    }

    @*document.getElementById('FormLichHoc').onload = (event) => {
        document.getElementById('date').value = '@ViewBag.Ngay'
    };*@

</script>



