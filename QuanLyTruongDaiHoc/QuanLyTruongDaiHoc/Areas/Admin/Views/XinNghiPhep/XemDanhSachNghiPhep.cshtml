@using QuanLyTruongDaiHoc.Models;
@model IEnumerable<QuanLyTruongDaiHoc.Models.tb_DangKyNghiPhep>

@{
    ViewBag.Title = "XemDanhSachNghiPhep";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />

<section class="content">
    <div class="container-fluid">
        <br />
        <br />
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <label> Danh sách đơn xin nghỉ phép</label>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover" id="danhsachnghiphep">
                            @{

                                int i = 1;
                                <thead>
                                    <tr>

                                        <th>STT</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.tb_GiangVien.MaGiangVien)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.tb_GiangVien.tb_ThongTinCaNhan.Hoten)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NgayNghi)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.LyDo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NgayGui)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TrangThai)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PhanHoi)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.NgayDuyet)
                                        </th>
                                        <th>Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@i</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tb_GiangVien.MaGiangVien)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tb_GiangVien.tb_ThongTinCaNhan.Hoten)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.NgayNghi)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.LyDo)
                                        </td>
                                        <th>
                                            @Html.DisplayFor(modelItem => item.NgayGui)
                                        </th>
                                        <th>
                                            @(Init.getStrTrangThai(item.TrangThai))
                                        </th>
                                        <th>
                                            @Html.DisplayFor(modelItem => item.PhanHoi)
                                        </th>

                                        <th>
                                            @Html.DisplayFor(modelItem => item.NgayDuyet)
                                        </th>

                                            <td>
                                                <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modalXuLyDon-@item.ID">
                                                    Xem chi tiết
                                                </button>
                                                @Html.Action("XuLyDon", "XinNghiPhep", new { id = item.ID })
                                            </td>
                                        
                                    </tr>
                                        i++;
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script>


    var table = new DataTable('#danhsachnghiphep', {
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json',
        },
    });

</script>



