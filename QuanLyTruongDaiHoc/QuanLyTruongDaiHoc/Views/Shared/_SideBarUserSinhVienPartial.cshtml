@using QuanLyTruongDaiHoc.Models;
<a href="#" class="brand-link">
    <img src="~/Content/AdminLTE-3.2.0/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">TRƯỜNG ĐẠI HỌC</span>
</a>


@{
    tb_TaiKhoan tk = null;
    if (Session["TaikhoanSV"] != null)
    {

        tk = (tb_TaiKhoan)Session["TaikhoanSV"];
    }
}


<!-- Sidebar -->
<div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        @{
            if (Session["TaikhoanSV"] == null)
            {
                <div class="image">
                    <img src="~/Assets/Imgs/Unknow User.jpg" class="img-circle elevation-2" alt="Ảnh đại diện người dùng ẩn danh">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Người dùng ẩn danh</a>
                </div>
            }
            else
            {
                //tb_TaiKhoan tk = (tb_TaiKhoan)Session["TaikhoanSV"];
                if (tk.Anh == null)
                {
                    <div class="image">
                        <img src="~/Assets/Imgs/No Avatar.png" class="img-circle elevation-2" alt="Ảnh đại diện người dùng ẩn danh">
                    </div>
                }
                else
                {
                    <div class="image">
                        <img src="~/Assets/Imgs/Avatars User/Student/@tk.Anh" class="img-circle elevation-2" alt="Ảnh đại diện người dùng ẩn danh">
                    </div>
                }
                <div class="info">
                    <a href="@Url.Action("ThongTinSinhVien","UserSinhVien",new {@id = tk.tb_SinhVien.SingleOrDefault().ID })" class="d-block">@tk.tb_SinhVien.SingleOrDefault().tb_ThongTinCaNhan.Hoten</a>
                </div>
            }
        }
    </div>

    <!-- SidebarSearch Form -->
    <div class="form-inline">
        <div class="input-group" data-widget="sidebar-search">
            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-sidebar">
                    <i class="fas fa-search fa-fw"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

            <li class="nav-header"><strong>TÀI KHOẢN</strong></li>
            @{
                if (Session["TaikhoanSV"] != null)
                {
                    <li class="nav-item">
                        <a href="@Url.Action("DoiMatKhau","Account", new { id = tk.ID })" class="@(ViewContext.RouteData.Values["action"].ToString()=="DoiMatKhau"?"nav-link active":"nav-link")">
                            <i class="nav-icon fa fa-retweet"></i>
                            <p>
                                Đổi mật khẩu
                                @*<span class="badge badge-info right">2</span>*@
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("DangXuat","Account", new { area = "" })" class="nav-link">
                            <i class="nav-icon fa fa-retweet"></i>
                            <p>
                                Đăng xuất
                                @*<span class="badge badge-info right">2</span>*@
                            </p>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="@Url.Action("DangNhap","Account")" class="@(ViewContext.RouteData.Values["action"].ToString()=="DangNhap"?"nav-link active":"nav-link")">
                            <i class="nav-icon fa fa-retweet"></i>
                            <p>
                                Đăng nhập
                                @*<span class="badge badge-info right">2</span>*@
                            </p>
                        </a>
                    </li>
                }
            }

            <!--Quản lý trường Đại học-->

            <li class="nav-header"><strong>HỆ THỐNG</strong></li>

            <li class="nav-item">
                <a href="@Url.Action("XemThongBao","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="XemThongBao"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Xem thông báo
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("DanhGiaRenLuyen","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="DanhGiaRenLuyen"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Đánh giá rèn luyện
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("XemYeuCauCapGiay","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="XemYeuCauCapGiay"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Yêu cầu giấy chứng nhận
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>

            <li class="nav-item">
                <a href="@Url.Action("ChuongTrinhDaoTao","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="ChuongTrinhDaoTao"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Chương trình đào tạo
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("DangKyMonHoc","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="DangKyMonHoc"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Đăng ký môn
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("XemLichHoc","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="XemLichHoc"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Xem lịch học
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("XemDiem","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="XemDiem"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Xem điểm
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("XemHocBong","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="XemHocBong"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Học bổng
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("XemLichThi","UserSinhVien")" class="@(ViewContext.RouteData.Values["action"].ToString()=="XemLichThi"?"nav-link active":"nav-link")">
                    <i class="nav-icon fa fa-book"></i>
                    <p>
                        Xem lịch thi
                        @*<span class="badge badge-info right">2</span>*@
                    </p>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.sidebar-menu -->
</div>
<!-- /.sidebar -->